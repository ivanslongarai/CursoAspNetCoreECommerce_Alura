@model Order;

@{ ViewData["Title"] = "Resume"; }

<h3>Order Resume</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Order Number: @(Model.Id)</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Your Information</h3>
                <div>@(Model.Register.Name)</div>
                <div>@(Model.Register.Phone)</div>
            </div>
            <div class="col-md-3">
                @(Model.Register.Email)
            </div>
            <div class="col-md-6">
                <h3>Delivery Adress</h3>
                <div>
                    @Model.Register.Adress - @Model.Register.Complement - @Model.Register.District - @Model.Register.City - ZipCode: @Model.Register.ZipCode - @Model.Register.State
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Amount</h3>
            </div>
        </div>
        @foreach (var item in Model.Items)
        {
            <div class="row">
                <div class="col-md-10">
                    <div>@(item.Product.Name)</div>
                </div>
                <div class="col-md-2">
                    <div class="pull-right">@(item.Amount)</div>
                </div>
            </div>
        }

    </div>
</div>
